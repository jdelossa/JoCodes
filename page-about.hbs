{{!< full-width}}
{{#post}}
    <article class="post pure-g-r">

        <header class="post-header pure-u-1"><h1>{{title}}</h1></header>

        <div class="post-content pure-u-2-3">
            {{content}}
        </div>
        <div class="pure-u-1 pure-u-1-3">
            <figure class="about-image">
                <img src="{{author.image}}" alt="Jo">
            </figure>
        </div>

    </article>
{{/post}}