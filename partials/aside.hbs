<section class="sidebar-data-holder">
    <div class="spinner" role="spinner"><div class="spinner-icon"></div></div>
    <nav class="main-nav">
        <button class="nav-control"><i class="icon-hamburguer"></i></button>
        {{> nav}}
    </nav>
    <div class="logo"><a href="/" title="Back to home">{{@blog.title}}</a></div>

    <!-- Author info -->
    {{#if post}}
        {{#post}}
            {{> author}}
        {{/post}}
    {{else}}
        {{#foreach posts}}
            {{#if @first}}
                {{> author}}
            {{/if}}
        {{/foreach}}
    {{/if}}

    <!-- Social media badges -->
    {{> social-media}}
    
    <footer id="main-footer"><p>View my projects on my <a href="//joannadelossantos.com" target="_blank">personal site</a>.</p></footer>
</section>